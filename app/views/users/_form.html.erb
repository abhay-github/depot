<%= render 'shared/error_messages', object: @user %>
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group row">
    <div class="col-sm-3">
    <%= f.label :name, :class => 'control-label' %>
    </div>
    <div class="col-sm-9">
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', size: 40 %>
    </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-3">
      <%= f.label :password, :class => 'control-label' %>
    </div>
    <div class="col-sm-9">
      <div class="controls">
        <%= f.password_field :password, :class => 'form-control', size: 40 %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-3">
      <%= f.label :password_confirmation, "Confirmation", :class => 'control-label' %>
    </div>
    <div class="col-sm-9">
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'form-control', size: 40 %>
      </div>
    </div>
  </div>
  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            users_path, :class => 'btn btn-default' %>
 
<% end %>
