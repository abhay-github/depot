  <h1>Listing Products</h1>
  <%= link_to 'New', new_product_path, :class => 'btn btn-primary btn-lg' %>


<ul class="allprdcts list-group">
  <% @products.each do |product| %>
  <li class="row list-group-item">
    <div class="col-md-2"><%= image_tag product.image_url,  size: "150x150", class: "img-responsive" %></div>
    <div class="col-md-7 col-md-offset-1">
      <h3><%= product.name %></h3>
      <p><%= product.description %></p>
    </div>
    <div class="col-md-2">
      <p><%= link_to "show",product, class: "btn btn-primary " %></p>
      <p><%= link_to "edit",edit_product_path(product), class: "btn btn-warning " %></p>
      <p><%= link_to "delete",product, method: :delete, class: "btn btn-danger " %></p>
    </div>
  </li>
  <% end %>
</ul>


