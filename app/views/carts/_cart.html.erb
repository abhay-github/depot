<div class="page-header">
	<h1>Your Depot Cart</h1>
</div>

<div class="table-responsive">
	<table class="table table-striped mycart">
		<%= render cart.line_items %>
		<tr>
			<td>Total:</td>
			<td><%= number_to_currency cart.total_price %></td>
			<td></td>
		</tr>
	</table>
</div>
<%= button_to "empty cart", cart, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" }, remote: true %>
